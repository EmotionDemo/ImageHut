        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >
        <include layout="@layout/bottom_navigation_bar"/>
    </RelativeLayout>

</RelativeLayout>
