    android:layout_height="match_parent"
    tools:context="com.lifh.imagehut.imagehut.activities.MainActivity">

    <RelativeLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
